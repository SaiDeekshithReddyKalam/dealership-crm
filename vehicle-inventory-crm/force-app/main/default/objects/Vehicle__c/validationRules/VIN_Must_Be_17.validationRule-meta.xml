<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VIN_Must_Be_17</fullName>
    <active>true</active>
    <errorConditionFormula>LEN(TRIM(VIN__c)) &lt;&gt; 17</errorConditionFormula>
    <errorDisplayField>VIN__c</errorDisplayField>
    <errorMessage>“VIN must be 17 characters.”</errorMessage>
</ValidationRule>
